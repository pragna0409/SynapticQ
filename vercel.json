{
  "version": 2,
  "builds": [
    {
      "src": "icu_ai/backend/app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "icu_ai/frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/icu_ai/backend/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/icu_ai/frontend/$1"
    }
  ]
}
